<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/HomeHeader"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="@dimen/appbar_padding"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_profile_icon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/quick_access_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading">

        <ImageView
            android:id="@+id/add_invoice_home"
            android:layout_width="66dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/addinvoice_icon" />

        <ImageView
            android:id="@+id/bscore_home"
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bscore_icon"
            android:paddingLeft="40dp" />

        <ImageView
            android:id="@+id/services_home"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_services_icon" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/quick_access_toolbar"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/invoice_btn_home"
                android:layout_width="312dp"
                android:layout_height="100dp"
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:background="@drawable/home_feature_shape"
                android:backgroundTint="#FFEFE4"
                android:drawableLeft="@drawable/ic_invoice_icon1"
                android:paddingLeft="31dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Invoice"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/inventory_btn_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.912"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/inventory_btn_home"
                android:layout_width="312dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_feature_shape"
                android:backgroundTint="#E8F5FF"
                android:drawableLeft="@drawable/ic_inventory_icon1"
                android:paddingLeft="31dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Inventory"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/invoice_btn_home"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/finance_btn_home"
                android:layout_width="312dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_feature_shape"
                android:backgroundTint="#FFF1D2"
                android:drawableLeft="@drawable/ic_finance_icon1"
                android:paddingLeft="31dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Finance"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inventory_btn_home"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/staff_management_btn_home"
                android:layout_width="312dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_feature_shape"
                android:backgroundTint="#E8F5FF"
                android:drawableLeft="@drawable/ic_staff_management"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Staff Management"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finance_btn_home"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>