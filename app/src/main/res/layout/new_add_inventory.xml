<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/HomeHeader"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="@dimen/appbar_padding"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_profile_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="483dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_inventory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#F4F7FF"
            android:drawableLeft="@drawable/ic_name_inventory"
            android:gravity="center"
            android:hint="Enter Product Name"
            android:paddingLeft="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/code_inventory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#F4F7FF"
            android:drawableLeft="@drawable/ic_name_inventory"
            android:gravity="center"
            android:hint="Enter Product Code"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/name_inventory"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quantity_inventory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#F4F7FF"
            android:drawableLeft="@drawable/ic_quantity_inventory"
            android:gravity="center"
            android:inputType="number"
            android:hint="Enter Quantity of the Product"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/code_inventory" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/units_inventory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#F4F7FF"
            android:drawableLeft="@drawable/ic_units_inventory"
            android:gravity="center"
            android:inputType="number"
            android:hint="Enter Units Per Product"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/quantity_inventory" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/uom_inventory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#F4F7FF"
            android:drawableLeft="@drawable/ic_measurement_inventory"
            android:drawableRight="@drawable/ic_down_inventory"
            android:gravity="center"
            android:hint="Enter Units of Measurement"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/units_inventory" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/price_inventory"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#F4F7FF"
            android:drawableLeft="@drawable/ic_price_inventory"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:inputType="number"
            android:hint="Enter Price of the Product"
            app:layout_constraintTop_toBottomOf="@+id/uom_inventory" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cancel_add_inventory"
            android:layout_width="152dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#E0E0E0"
            android:text="Discard"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/save_add_inventory"
            android:layout_width="152dp"
            android:layout_height="42dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#5273EB"
            android:text="Save"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>