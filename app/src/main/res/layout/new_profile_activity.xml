<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<de.hdodenhof.circleimageview.CircleImageView
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_centerInParent="true"
			android:layout_marginLeft="120dp"
			android:layout_marginTop="100dp"
			android:src="@drawable/ic_baseline_account_circle_24"
			app:civ_border_width="4dp" />

		<LinearLayout
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp">

			<ImageView

				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/user" />

			<TextView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_weight="2"
				android:textSize="20sp"
				android:textStyle="bold"
				tools:ignore="SmallSp"
				tools:text="Name" />

		</LinearLayout>

		<TextView
			android:id="@+id/name"
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp"
			android:hint="Your name" />

		<LinearLayout
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp">

			<ImageView

				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/mail" />

			<TextView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_weight="2"
				android:textSize="20sp"
				android:textStyle="bold"
				tools:ignore="SmallSp"
				tools:text="Mail" />

		</LinearLayout>

		<TextView
			android:id="@+id/email_id"
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp"
			android:hint="Your email id" />

		<LinearLayout
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp">

			<ImageView

				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/mob" />

			<TextView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_weight="2"
				android:textSize="20sp"
				android:textStyle="bold"
				tools:ignore="SmallSp"
				tools:text="Mobile" />

		</LinearLayout>

		<TextView
			android:id="@+id/mobile_number"
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp"
			android:hint="Your mobile number" />

		<LinearLayout
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp">

			<ImageView

				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/org" />

			<TextView

				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_weight="2"
				android:textSize="20sp"
				android:textStyle="bold"
				tools:ignore="SmallSp"
				tools:text="Oranization Name" />

		</LinearLayout>

		<TextView
			android:id="@+id/org_name"
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp"
			android:hint="Your organization name" />

		<LinearLayout
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/orgtype" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_weight="2"
				android:textSize="20sp"
				android:textStyle="bold"
				tools:ignore="SmallSp"
				tools:text="Organization Type" />
		</LinearLayout>

		<TextView
			android:id="@+id/org_type"
			android:layout_width="300dp"
			android:layout_height="40dp"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="10dp"
			android:hint="Your organization type" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:layout_marginRight="50dp"
			android:backgroundTint="@color/colorPrimary"
			android:text="Update ->"
			android:textColor="@color/white" />
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>