    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/addinvoice_icon"
            android:paddingLeft="10dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bscore_icon"
            android:paddingLeft="40dp" />

        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="@drawable/ic_home_black_24dp" />

    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/invoice_btn"
        android:layout_width="312dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:background="@drawable/home_feature_shape"
        android:backgroundTint="#FFEFE4"
        android:drawableLeft="@drawable/ic_invoice_icon1"
        android:paddingLeft="31dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Invoice"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/inventory_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout"
        app:layout_constraintVertical_bias="0.912"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/inventory_btn"
        android:layout_width="312dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_feature_shape"
        android:backgroundTint="#E8F5FF"
        android:drawableLeft="@drawable/ic_inventory_icon1"
        android:paddingLeft="31dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Inventory"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoice_btn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/finance_btn"
        android:layout_width="312dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_feature_shape"
        android:backgroundTint="#FFF1D2"
        android:drawableLeft="@drawable/ic_finance_icon1"
        android:paddingLeft="31dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Finance"
        android:textColor="@color/black"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_btn"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>