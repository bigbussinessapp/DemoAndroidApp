<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main.TestActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/company_name"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/home_feature_shape"
        android:drawableLeft="@drawable/ic_icon_companyname"
        android:paddingLeft="10dp"
        android:hint="Enter Company name"
        android:gravity="center"
        android:backgroundTint="#F4F7FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/amount_reminders"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_feature_shape"
        android:drawableLeft="@drawable/ic_amount_reminder"
        android:paddingLeft="10dp"
        android:hint="Rs.Amount"
        android:inputType="number"
        android:gravity="center"
        android:backgroundTint="#F4F7FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_name" />

        <RadioGroup
            android:id="@id/checklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/amount_reminders"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp">
            <RadioButton
                android:id="@+id/checklist_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_check_icon_reminder"
                android:drawablePadding="10dp"
                android:layout_marginRight="30dp"
                android:text="Receive"/>
            <RadioButton
                android:id="@+id/checklist_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_check_icon_reminder"
                android:drawablePadding="10dp"
                android:paddingRight="30dp"
                android:text="Pay"/>
        </RadioGroup>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/set_date"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_icon_calender"
        android:background="@drawable/home_feature_shape"
        android:paddingRight="10dp"
        android:hint="Set Date"
        android:gravity="center"
        android:backgroundTint="#F4F7FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checklist" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/set_time"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_icon_clock"
        android:background="@drawable/home_feature_shape"
        android:paddingLeft="10dp"
        android:hint="Set Time"
        android:gravity="center"
        android:paddingRight="10dp"
        android:backgroundTint="#F4F7FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_date" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_time"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="152dp"
            android:layout_height="42dp"
            android:layout_marginLeft="40dp"
            android:text="Discard"
            android:textColor="@color/white"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#E0E0E0"/>

        <Button
            android:layout_width="152dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/home_feature_shape"
            android:backgroundTint="#5273EB"
            android:text="Save"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>